<!-- 
  Tangobot navigation visualization
 -->
<launch>
  <arg name="base"       default="$(optenv TURTLEBOT_BASE kobuki)"/>  <!-- create, rhoomba -->
  <arg name="stacks"     default="$(optenv TURTLEBOT_STACKS hexagons)"/>  <!-- circles, hexagons -->
  <arg name="3d_sensor"  default="$(optenv TURTLEBOT_3D_SENSOR kinect)"/>  <!-- kinect, asus_xtion_pro -->

  <!-- Name of the map to use (without path nor extension) and initial position -->
  <arg name="map_file"       default="$(find navigation_setup)/map/empty.yaml"/>

  <param name="/use_sim_time" value="false"/>   <!-- False if we are not using simulation-->

  <!--  ***************** Robot Model *****************  -->
  <include file="$(find navigation_setup)/launch/tools/robot_model_bringup.launch">
    <arg name="base" value="$(arg base)" />
    <arg name="stacks" value="$(arg stacks)" />
    <arg name="3d_sensor" value="$(arg 3d_sensor)" />
  </include>

  <!--  ****** Maps *****  -->
  <include file="$(find navigation_setup)/launch/tools/map.launch">
    <arg name="map_file" value="$(arg map_file)"/>
  </include>

  <!-- publish device pose -->
  <node pkg="dynamic_reconfigure" name="dynparam" type="dynparam" args="set /tango publish_device_pose true"/>
  <!-- publish remaining transformations -->
  <node pkg="navigation_setup" name="tango_extrinsics_publisher" type="tango_extrinsics_publisher"/>

  <!--  **************** Visualisation ****************  -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find navigation_setup)/include/robot_navigation.rviz"/>
</launch>
